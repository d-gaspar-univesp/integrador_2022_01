doctype html
html
  head
    title= `${title}`
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/styles.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js')
    script(src="https://cdn.jsdelivr.net/gh/emn178/chartjs-plugin-labels/src/chartjs-plugin-labels.js")

  body
    div.row.no-gutters
      div.col.no-gutters
        div.div-left
          block content
      div.col.no-gutters
        div.div-right
          if json.length
            div.div-right-header.no-gutters
              b Nome do arquivo:
              p #{nome_arquivo}
            table.listing-table.table-dark.table-striped
              thead
                tr
                  th id
                  th data_evento
                  th hora_evento
                  th turno
                  th status
              tbody
                each elem,i in json
                  tr
                    td #{elem.id}
                    td #{elem.data_evento}
                    td #{elem.hora_evento}
                    td #{elem.turno}
                    td #{elem.status}
          else
            p Sem registros carregados.

    script.
      var xValues = ["B", "E"];
      var yValues_T1 = [!{status["T1"]["B"]}, !{status["T1"]["E"]}];
      var yValues_T2 = [!{status["T2"]["B"]}, !{status["T2"]["E"]}];
      var yValues_T3 = [!{status["T3"]["B"]}, !{status["T3"]["E"]}];
      var barColors = [
        "#b91d47",
        "#2b5797"
      ];
      
      new Chart("doughnutChart_T1", {
        type: "doughnut",
        data: {
          labels: xValues,
          datasets: [{
            backgroundColor: barColors,
            data: yValues_T1
          }]
        },
        options: {
          title: {
            display: true,
            text: "T1 (Total: " + !{status["T1"]["B"] + status["T1"]["E"]} + ')'
          },
          plugins: {
            labels: {
              render: 'value',
              fontColor: '#fff'
            }
          }
        }
      });

      new Chart("doughnutChart_T2", {
        type: "doughnut",
        data: {
          labels: xValues,
          datasets: [{
            backgroundColor: barColors,
            data: yValues_T2
          }]
        },
        options: {
          title: {
            display: true,
            text: "T2 (Total: " + !{status["T2"]["B"] + status["T2"]["E"]} + ')'
          },
          plugins: {
            labels: {
              render: 'value',
              fontColor: '#fff'
            }
          }
        }
      });

      new Chart("doughnutChart_T3", {
        type: "doughnut",
        data: {
          labels: xValues,
          datasets: [{
            backgroundColor: barColors,
            data: yValues_T3
          }]
        },
        options: {
          title: {
            display: true,
            text: "T3 (Total: " + !{status["T3"]["B"] + status["T3"]["E"]} + ')'
          },
          plugins: {
            labels: {
              render: 'value',
              fontColor: '#fff'
            }
          }
        }
      });

      var xValues_line_T1 = !{JSON.stringify(yield_T1["yield"])};
      var xLabels_line_T1 = !{JSON.stringify(yield_T1["date"])};
      
      console.log('dsffsdsdf');

